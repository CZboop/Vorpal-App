ScreenManager:
    SplashScreen:
    DefineScreen:
    DefinitionsScreen:
    GeneratingScreen:
    ExampleScreen:

<SplashScreen>:
    name: 'Splash'
    FloatLayout:
        MDLabel:
            text: "Vorpal Dictionary"
            pos_hint: {'center_x':.5, 'center_y':.78}
            size_hint: 1.0, 0.2
            font_style: 'H4'
            font_size: '60sp'
            color: (1,1,1,1)
            halign: 'center'

        MDLabel:
            text: "Define made up words"
            pos_hint: {'center_x':.5, 'center_y':.4}
            size_hint: 1.0, 0.2
            font_style: 'H5'
            color: (1,1,1,1)
            halign: 'center'

        MDIcon:
            icon: 'bookshelf'
            pos_hint: {'center_x':.5, 'center_y':.55}
            halign: 'center'

        MDRaisedButton:
            text: 'Begin!'
            size_hint: 0.6, 0.1
            pos_hint: {'center_x': .5, 'center_y': .2}
            font_style: 'H5'
            on_release:
                app.load_words()
                root.manager.transition.direction='left'
                root.manager.current = "Generating"
                app.start_animation()


<DefineScreen>:
    id: define
    name: "Define"
    FloatLayout:
        MDLabel:
            id: prompttext
            text: "..."
            pos_hint: {'center_x':.5, 'y':.65}
            size_hint: 1.0, 0.2
            font_style: 'H4'
            color: (1,1,1,1)
            halign: 'center'

        MDTextField:
            id: def_input
            pos_hint: {'center_x':.5, 'y':.5}
            size_hint: 0.8, 0.1
            hint_text: "Enter your definition"

        MDRaisedButton:
            id: submit_btn
            text: "Submit"
            pos_hint: {'center_x':.5, 'y':.35}
            size_hint: 0.8, 0.1
            font_style: 'H5'
            on_release:
                app.submit(def_input.text)

        MDRaisedButton:
            id: skip_btn
            text: "Skip Word"
            pos_hint: {'center_x':.5, 'y':.20}
            size_hint: 0.8, 0.1
            font_style: 'H5'
            on_release:
                app.skip()

        MDToolbar:
            id: toolbar
            title: 'Menu'
            pos_hint: {'top': 1}
            elevation: 15
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]

        MDToolbar:
            id: bottombar
            title: ''
            elevation: 15
            pos_hint: {'bottom': 1}

    MDNavigationDrawer:
        id: nav_drawer
        FloatLayout:
            size_hint: 1.0, 1.0

<ExampleScreen>:
    id: example
    name: "Example"
    FloatLayout:
        MDLabel:
            id: exampleprompttext
            text: ""
            pos_hint: {'center_x':.5, 'y':.65}
            size_hint: 1.0, 0.2
            font_style: 'H4'
            color: (1,1,1,1)
            halign: 'center'

        MDTextField:
            id: example_input
            pos_hint: {'center_x':.5, 'y':.5}
            size_hint: 0.8, 0.1
            hint_text: "Enter your definition"

        MDRaisedButton:
            id: example_submit_btn
            text: "Submit"
            pos_hint: {'center_x':.5, 'y':.35}
            size_hint: 0.8, 0.1
            font_style: 'H5'
            on_release:
                app.example_submit(example_input.text)

        MDToolbar:
            id: toolbar
            title: 'Menu'
            pos_hint: {'top': 1}
            elevation: 15
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]

        MDToolbar:
            id: bottombar
            title: ''
            elevation: 15
            pos_hint: {'bottom': 1}

    MDNavigationDrawer:
        id: nav_drawer
        FloatLayout:
            size_hint: 1.0, 1.0

<GeneratingScreen>:
    id: generatescreen
    name: "Generating"
    FloatLayout:
        MDLabel:
            id: generating_label
            text: 'Generating'
            pos_hint: {'center_x':.5, 'center_y':.5}
            size_hint: 1.0, 0.2
            # font_style: 'H6'
            font_size: '50sp'
            color: (1,1,1,1)
            halign: 'center'
