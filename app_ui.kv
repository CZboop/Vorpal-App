ScreenManager:
    SplashScreen:
    MainScreen:
    DefinitionsScreen:

<SplashScreen>:
    name: 'Splash'
    FloatLayout:
        MDLabel:
            text: "Vorpal Dictionary"
            pos_hint: {'center_x':.5, 'center_y':.78}
            size_hint: 1.0, 0.2
            font_style: 'H4'
            font_size: '60sp'
            color: (1,1,1,1)
            halign: 'center'

        MDLabel:
            text: "Define made up words"
            pos_hint: {'center_x':.5, 'center_y':.4}
            size_hint: 1.0, 0.2
            font_style: 'H5'
            color: (1,1,1,1)
            halign: 'center'

        MDIcon:
            icon: 'bookshelf'
            pos_hint: {'center_x':.5, 'center_y':.55}
            halign: 'center'

        MDRaisedButton:
            text: 'Begin!'
            size_hint: 0.6, 0.1
            pos_hint: {'center_x': .5, 'center_y': .2}
            font_style: 'H5'
            on_release:
                app.load_words()
                root.manager.transition.direction='left'
                root.manager.current = 'Main'


<MainScreen>:
    id: main
    name: "Main"
    FloatLayout:
        MDLabel:
            id: prompttext
            text: "******"
            pos_hint: {'center_x':.5, 'y':.65}
            size_hint: 1.0, 0.2
            font_style: 'H4'
            color: (1,1,1,1)
            halign: 'center'

        MDTextField:
            id: def_input
            pos_hint: {'center_x':.5, 'y':.5}
            size_hint: 0.8, 0.1
            hint_text: "Enter your definition"

        MDRaisedButton:
            id: submit_btn
            text: "Submit"
            pos_hint: {'center_x':.5, 'y':.35}
            size_hint: 0.8, 0.1
            font_style: 'H5'
            on_release:
                app.submit(def_input.text)

        MDRaisedButton:
            id: skip_btn
            text: "Skip Word"
            pos_hint: {'center_x':.5, 'y':.20}
            size_hint: 0.8, 0.1
            font_style: 'H5'
            on_release:
                app.skip()

        MDToolbar:
            id: toolbar
            title: 'Menu'
            pos_hint: {'top': 1}
            elevation: 15
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]

        MDToolbar:
            id: match_scorebar
            title: 'Score: 0/0'
            elevation: 15
            pos_hint: {'bottom': 1}

    MDNavigationDrawer:
        id: nav_drawer
        FloatLayout:
            size_hint: 1.0, 1.0

<DefinitionsScreen>:
    id: definitions
    name: "Definitions"
    FloatLayout:
        MDLabel:
            text: "******"
            pos_hint: {'center_x':.5, 'y':.73}
            size_hint: 1.0, 0.2
            font_style: 'H5'
            color: (1,1,1,1)
            halign: 'center'

        MDToolbar:
            id: toolbar
            title: 'Menu'
            pos_hint: {'top': 1}
            elevation: 15
            left_action_items: [["menu", lambda x: nav_drawer.set_state("toggle")]]

        MDToolbar:
            id: match_scorebar
            title: 'Score: 0/0'
            elevation: 15
            pos_hint: {'bottom': 1}

    MDNavigationDrawer:
        id: nav_drawer
        FloatLayout:
            size_hint: 1.0, 1.0
